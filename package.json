{
	"name": "@bucketeer/mcp",
	"version": "1.0.2",
	"description": "MCP server for Bucketeer feature flags management",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"@bucketeer/mcp": "dist/index.js",
		"mcp": "dist/index.js"
	},
	"files": [
		"dist/",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"clean": "rm -rf dist",
		"lint": "biome lint",
		"format": "biome format",
		"check": "biome check",
		"lint:fix": "biome lint --write",
		"format:fix": "biome format --write",
		"check:fix": "biome check --write",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"mcp",
		"bucketeer",
		"feature-flags",
		"model-context-protocol"
	],
	"author": "",
	"license": "Apache-2.0",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.15.1",
		"axios": "^1.7.2",
		"dotenv": "^17.0.0",
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "^24.0.0",
		"tsx": "^4.15.7",
		"typescript": "^5.5.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bucketeer-io/bucketeer-mcp.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public",
		"@bucketeer:registry": "https://registry.npmjs.org"
	}
}
